{
  "files.associations": {
    "*.js": "javascriptreact"
  },
  // Disable VSCode's built-in javascript formatter
  "javascript.format.enable": false,

  // ESLint + Prettier setup guide - https://www.youtube.com/watch?v=bfyI9yl3qfE
  "editor.formatOnSave": true,
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "prettier.disableLanguages": ["javascriptreact"],
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,

  // Disable built-in VSCode validations because it doesn't understand Flow
  "javascript.validate.enable": false,
  "flow.useNPMPackagedFlow": true,
  "flow.runOnAllFiles": true,
  "flow.useLSP": false
}
